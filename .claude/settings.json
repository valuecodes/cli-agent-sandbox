{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "description": "Settings for Claude code agents",
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Bash(pnpm lint:*)",
      "Bash(pnpm lint:fix:*)",
      "Bash(pnpm typecheck:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm format:*)",
      "Bash(pnpm format:check:*)",
      "Bash(pnpm test:*)"
    ],
    "ask": [
      "Bash(pnpm install:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm remove:*)",
      "Bash(git commit:*)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(ssh:*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Bash(git push:*)",
      "Bash(gh pr create:*)"
    ]
  }
}
